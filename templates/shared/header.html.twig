			<div class="uc-mobile-menu-pusher">
				<div
					class="content-wrapper">
					<!--Bacground-->
					<section id="header_section_wrapper" class="header_section_wrapper header_back">
						<div class="container">
							<div class="header-section">
								<div class="row">
									<div class="col-md-4">
										<div class="left_section">
											<div class="social">
												<a class="icons-sm fb-ic">
													<i class="fab fa-facebook-f"></i>
												</a>
												<!--Twitter-->
												<a class="icons-sm tw-ic">
													<i class="fab fa-twitter"></i>
												</a>
												<!--Google +-->
												<a class="icons-sm inst-ic">
													<i class="fab fa-instagram"></i>
												</a>
												<!--Linkedin-->
												<a class="icons-sm tmb-ic">
													<i class="fab fa-linkedin-in"></i>
												</a>
												<!--Pinterest-->
												<a class="icons-sm rss-ic">
													<i class="fas fa-rss"></i>
												</a>
											</div>
											<!-- Top Social Section -->
										</div>
										<!-- Left Header Section -->
									</div>
									<div class="col-md-4">
										<a href="{{ path('homepage') }}">
											<p class="logo">Sci-Fi Finder</p>
										</a>
										<!--<div class="logo">
																														                        
																														                                    <!-- Logo Section -->
									</div>
									<div class="col-md-4">
										<div class="right_section red-menu">
											<ul class="nav navbar-nav">
												{% if app.user %}
													<li class="dropdown">
														<a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" id="accdrop">
															<img src="{{ app.user.avatar }}" class="picture picture-mini" alt="Avatar de {{ app.user.Name }}">
															{{ app.user.Name }}
															<i class="fa fa-angle-down"></i>
														</a>

														<ul class="dropdown-menu accmenu">
												
																<li><a href="{{ path('films_add') }}">Ajouter un film</a></li>
																<li><a href="{{ path('series_add') }}">Ajouter une série</a></li>
																<li><a href="{{ path('livres_add') }}">Ajouter un livre</a></li>
															    	
													<li class="divider home"></li>
															<li>
																<a href="{{ path('account_home') }}">Mon compte</a>
															</li>
															<li>
																<a href="{{ path('account_profile') }}">Modifier mon profile</a>
															</li>
															<li class="divider home"></li>
															<li>
																<a href="{{ path('acc_logout') }}">Se déconnecter</a>
															</li>
														</ul>
													</li>
												{% else %}
													<li>
														<a href="{{ path('acc_login') }}">Se Connecter</a>
													</li>
													<li>
														<a href="{{ path('acc_register') }}">S'Enregistrer
														</a>
													</li>
												{% endif %}
												<li><a  href="{{ path('admin_dash') }}" >/ Admin <i class="fas fa-user-lock"></i></a></li>
												<!--<li><a href="#">Admin</a></li>-->


										</div>
										<!-- Right Header Section -->
									</div>
								</div>
							</div>
							<!-- Header Section -->


							<div class="navigation-section">
								<nav class="navbar m-menu navbar-default">
									<div
										class="container">
										<!-- Brand and toggle get grouped for better mobile display -->
										<div class="navbar-header">
											<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse-1">
												<span class="sr-only">Toggle navigation</span>
												<span class="icon-bar"></span>
												<span class="icon-bar"></span>
												<span class="icon-bar"></span>
											</button>
										</div>
										<!-- Collect the nav links, forms, and other content for toggling -->
										<div class="collapse navbar-collapse" id="#navbar-collapse-1">
											<ul class="nav navbar-nav main-nav">
												<li {% if app.request.get('_route') == 'homepage' %} class="active"{% endif %}>
													<a href="{{ path('homepage') }}">Accueil</a>
												</li>
												<li {% if app.request.get('_route') == 'films' %} class="active"{% endif %}>
													<a href="{{ path('films') }}">Films</a>
												</li>
												<li {% if app.request.get('_route') == 'series' %} class="active"{% endif %}>
													<a href="{{ path('series') }}">Séries</a>
												</li>
												<li {% if app.request.get('_route') == 'livres' %} class="active"{% endif %}>
													<a href="{{ path('livres') }}">Livres</a>
												</li>


											</ul>
										</div>
										<!-- .navbar-collapse -->
									</div>
									<!-- .container -->
								</nav>
								<!-- .nav -->
							</div>
							<!-- .navigation-section -->
						</div>
						<!-- .container -->
					</section>
					<!-- header_section_wrapper -->

					<!--Search Bar-->
					<section>
						<div class="container">
							<div class="row">
								<div class="col-md-12">
								{% endblock %}

								{% block message %}{% endblock %}

								

				{% for label, messages in app.flashes %}
					<div class="container">
						<div class="alert alert-{{ label }}">
							{% for message in messages %}
								<p>{{ message | raw }}</p>
							{% endfor %}
						</div>
					</div>
				{% endfor %}
