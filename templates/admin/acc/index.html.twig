

{<!DOCTYPE html>
<html>

	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta
		name="viewport" content="width=device-width, initial-scale=1">
		<title>Se connecter{% block title %}{% endblock %}</title>

		<!-- favicon -->
		<link
		href="/img/favicon.png" rel="icon">

		<!-- web-fonts -->
		<link href='https://fonts.googleapis.com/css?family=Roboto:100,300,400,700,500' rel='stylesheet' type='text/css'>
		<link
		href="https://fonts.googleapis.com/css?family=Old+Standard+TT" rel="stylesheet">

		<!-- Bootstrap -->
		<link
		href="/css/bootstrap.min.css" rel="stylesheet">

		<!-- font-awesome -->
		<link
		href="/fonts/font-awesome/font-awesome.min.css" rel="stylesheet">
		<!-- Mobile Menu Style -->
		<link
		href="/css/mobile-menu.css" rel="stylesheet">

		<!-- Owl carousel -->
		<link href="/css/owl.carousel.css" rel="stylesheet">
		<link
		href="/css/owl.theme.default.min.css" rel="stylesheet">
		<!-- Theme Style -->
		<link href="/css/style.css" rel="stylesheet">
		<link href="/css/sign.style.css" rel="stylesheet">
        <script src="https://kit.fontawesome.com/a810a04cfb.js" crossorigin="anonymous"></script>

	</head>

	{% block body %}
	{% for label, messages in app.flashes %}
					<div class="container">
						<div class="alert alert-{{ label }}">
							{% for message in messages %}
								<p>{{ message | raw }}</p>
							{% endfor %}
						</div>
					</div>
				{% endfor %}

		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<div class="wrap">
						<p class="form-title">
                        <i class="fas fa-lock"></i>
							Connexion Ã  l'administration</p>
                        {% if hasError %}
                            <div class="alert alert-danger">Email ou mot de passe invalide !</div>
                        {% endif %}
						<form class="login" method="post">
							<input type="text" name="_username" id="email" placeholder="E-mail" value ="{{ user }}" />
							<input type="password" name="_password" id="password" placeholder="Mot de passe" required/>
							<input type="submit" value="Connexion" class="btn btn-info btn-sm"/>
						</form>
					</div>
				</div>
			</div>
		</div>


	{% endblock %}
</html>
