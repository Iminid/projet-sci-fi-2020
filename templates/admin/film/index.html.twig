{% extends "admin/base.html.twig" %}
{% block title %}Films
{% endblock %}

{% block body %}
			
				<div class="main-body-content w-100 ets-pt">
					<div class="table-responsive bg-light">
						<table class="table">
							<tr>
								<th>Id</th>
								<th>Titre</th>
								<th>Auteur</th>
								<th>Note</th>
								<th>Actions</th>
							</tr>
							{% for films in films %}
								<tr>
									<td>{{ films.id }}</td>
									<td>{{ films.title }}</td>
									<td><img src="{{ films.author.avatar }}" 
                                    alt="Avatar de {{ films.author.Name }}" class="picture picture-mini mr-2">
                                    {{ films.author.Name }}</td>
									<td>
										<div class="stars">
											<span class="rating">
												{% include "shared/rate.html.twig" with {'rate': films.getRating} %}
											</span>
										</div>
									</td>
									<td>
										<a href="{{ path('admin_films_edit', {'id': films.id}) }}" class="btn btn-primary">
											<i class="fas fa-edit"></i>
										</a>
										<a href="{{ path('admin_films_delete', {'id': films.id}) }}" class="btn btn-danger">
											<i class="fas fa-trash"></i>
										</a>
									</td>
								</tr>
							{% endfor %}
						</table>
					</div>
				</div>
			</div>
			

{% endblock %}
