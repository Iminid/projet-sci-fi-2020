{# Editeur #}
{% block _book_editors_widget %}
	<p class="label_big">Ici, vous pouvez ajouter les éditeurs !</p>
	{{ form_widget(form) }}
	<input type="hidden" id='widget-count' value="0">

	<div class="form-group">
		<button type="button" class="btn btn-primary" id="add-editor">+</button>
	</div>
{% endblock %}

{% block _book_editors_entry_row %}
	{{ form_widget(form) }}
{% endblock %}

{% block _book_editors_entry_widget %}
	<div class="form-group" id="block_{{ id }}">
		<div class="row-flex">
			<div class="col-10">
				<div class="row-flex">
					<div class="col">
						{{ form_widget(form.editorname) }}
					</div>
					<div class="col-2">
						<button type="button" data-action="delete" data-target="#block_{{ id }}" class="btn btn-danger">X</button>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}

